---
import '../styles/global.css';
import Header from '../components/Header.astro';
import '@fontsource/lato';
import { ViewTransitions } from 'astro:transitions';
import Metadata from '@components/Metadata.astro';
import info from '../data/info.json';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es' class='bg-dark'>
  <head>
    <meta charset='UTF-8' />
    <Metadata
      slot='head'
      title={info.name}
      '
      |
      Portafolio'
      description='Portafolio de Rafaella FernÃ¡ndez, desarrolladora de Software.'
      image={`${import.meta.env.SITE}//og.png`}
      canonicalUrl={`${import.meta.env.SITE}`}
      type='website'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class='mx-auto w-[684px] max-w-full'>
      <Header />
      <slot />
    </main>
  </body>
</html>
